{
  "name": "pr-description-generator",
  "version": "1.0.0",
  "description": "GitHub Actions - pull request descriptions generated by OpenAI",
  "main": "dist/index.js",
  "keywords": [],
  "author": "SearchKings",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/node": "^22.9.3",
    "esbuild": "^0.24.0",
    "esbuild-register": "^3.6.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.12.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.15.0"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "openai": "^4.73.0"
  },
  "lint-staged": {
    "**/*": "npx eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged && npm run build:prod"
    }
  },
  "scripts": {
    "prepare": "husky install",
    "lint": "npx ",
    "build": "npx tsc",
    "watch": "npx tsc --watch",
    "build:prod": "npx esbuild src/index.ts --bundle --platform=node --target=es2020 --outdir=build --minify"
  }
}
